<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MathematiqueJeu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Multiplications 1/3"
            android:textSize="30dp"
            android:id="@+id/calcul_titre"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 x 10 = "
                android:textSize="35dp"
                android:id="@+id/calcul_output"/>
            <EditText
                android:id="@+id/calcul_input"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                tools:ignore="MissingConstraints"
                android:inputType="number"/>
        </LinearLayout>

        <Button
            android:id="@+id/calcul_valider"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="600dp"
            android:onClick="clickValider"
            android:text="Suite"
            android:textSize="20dp" />

            <Button
                android:id="@+id/calcul_retour"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:onClick="clickValider"
                android:text="Retour"
                android:textSize="20dp"
                android:layout_marginBottom="600dp"/>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>